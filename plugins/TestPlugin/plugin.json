{
    "name": "Тестовый плагин",
    "description": "Демонстрационный плагин для тестирования системы плагинов MVC",
    "version": "1.0.0",
    "author": "MVC System Team",
    "license": "MIT",
    "requires": {
        "core": ">=1.0.0",
        "php": ">=8.0"
    },
    "routes": [
        {
            "method": "GET",
            "uri": "/test-plugin",
            "action": "TestPlugin\\Plugin@showPage"
        },
        {
            "method": "GET",
            "uri": "/test-plugin/api",
            "action": "TestPlugin\\Plugin@apiTest"
        },
        {
            "method": "POST",
            "uri": "/test-plugin/save",
            "action": "TestPlugin\\Plugin@saveData"
        }
    ],
    "hooks": [
        "before_routing",
        "after_routing",
        "before_controller",
        "after_controller"
    ],
    "menu": {
        "admin": {
            "title": "Тестовый плагин",
            "url": "/admin/test-plugin",
            "icon": "bi bi-plugin",
            "position": 10
        }
    },
    "settings": {
        "enable_feature": true,
        "max_items": 10,
        "show_welcome": true
    }
}
