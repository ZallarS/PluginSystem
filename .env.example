# Application
APP_NAME=""
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Moscow
APP_LOCALE=ru

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=mvc_

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/tmp

# Security
APP_KEY=
CSRF_ENABLED=true
CSRF_TOKEN_LENGTH=32

# File Uploads
UPLOAD_MAX_SIZE=2048
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads

# Plugin System
PLUGINS_ENABLED=true
PLUGINS_PATH=plugins
PLUGINS_AUTO_DISCOVER=true

# Themes
THEME_ACTIVE=default
THEMES_PATH=themes

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_MAX_FILES=7

# Mail (optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"